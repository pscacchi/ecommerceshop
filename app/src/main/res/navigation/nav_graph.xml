<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gondolaFragment">

    <fragment
        android:id="@+id/gondolaFragment"
        android:name="ar.scacchipa.e_commerce.GondolaFragment"
        android:label="GondolaFragment" >
        <action
            android:id="@+id/action_gondolaFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_gondolaFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="ar.scacchipa.e_commerce.DetailFragment"
        android:label="DetailFragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="ar.scacchipa.e_commerce.CartFragment"
        android:label="CartFragment" />
</navigation>